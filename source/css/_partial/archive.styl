.archive-title
  color color-meta
  font-weight normal
  text-shadow 0 0 1px #fff
  background #fff
  padding 28px 0 28px 28px
  box-shadow: 0 2px 6px rgba(100,100,100,0.3);
  margin-bottom 20px

  &:before
    font-family font-icon
    content '\f073'
    padding-right 15px

  &.tag
    &:before
      content '\f02b'

  &.category
    &:before
      content '\f07b'

.archive
  margin-bottom 50px
  article
    box-shadow none
    .post-content
      margin-bottom 0