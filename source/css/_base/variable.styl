// Color
color-background = #e6e6e6
color-font = #444
color-meta = #999
color-border = #ddd
color-link = #3d658d

// Font
font-default = "Helvetica Neue", Helvetica, Arial, "Microsoft Yahei", sans-serif
font-serif = "Georgia", serif
font-mono =  Consolas, "Lucida Console", "Courier New", Menlo, Monaco, "Microsoft Yahei", monospace
font-title = "Lato", "Helvetica Neue", Helvetica, Arial, "Microsoft Yahei", sans-serif

@import url("//fonts.googleapis.com/css?family=Lato:400,400italic")

font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

// Width
page-width = 820px
